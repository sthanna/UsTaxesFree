# ==========================================
# Development Environment Configuration
# ==========================================

# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/tax_filing_db
DB_POOL_MIN=2
DB_POOL_MAX=10

# Security & Authentication
JWT_SECRET=development_secret_do_not_use_in_prod_12345
JWT_EXPIRY=24h
BCRYPT_ROUNDS=10

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# Redis
REDIS_URL=redis://localhost:6379

# Observability & Monitoring
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=tax-filing-api-dev

# AWS Configuration (local/dev)
AWS_REGION=us-east-1
AWS_S3_BUCKET=tax-filing-documents-dev
AWS_SECRETS_MANAGER_ENABLED=false

# E-filing Configuration (test mode)
IRS_EFILE_ENDPOINT=https://testwebservices.irs.gov/
IRS_EFILE_TCC=12345678
IRS_EFILE_EFIN=123456

# Feature Flags
ENABLE_PDF_GENERATION=true
ENABLE_EFILE_SUBMISSION=false
ENABLE_STATE_TAX=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
