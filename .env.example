# ==========================================
# Tax Filing Application - Environment Variables
# ==========================================
# Copy this file to .env and configure with actual values
# NEVER commit .env with real secrets to version control

# ==========================================
# Server Configuration
# ==========================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ==========================================
# Database Configuration
# ==========================================
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/tax_filing_db
DB_POOL_MIN=2
DB_POOL_MAX=10

# ==========================================
# Security & Authentication
# ==========================================
# CRITICAL: Generate strong secrets for production
# Example: openssl rand -base64 64
JWT_SECRET=change_me_in_production_use_strong_random_string
JWT_EXPIRY=24h
BCRYPT_ROUNDS=10

# ==========================================
# CORS Configuration
# ==========================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# ==========================================
# Redis (Optional - for caching)
# ==========================================
REDIS_URL=redis://localhost:6379

# ==========================================
# Observability & Monitoring
# ==========================================
# OpenTelemetry configuration
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=tax-filing-api

# Datadog (if using)
DD_AGENT_HOST=localhost
DD_TRACE_AGENT_PORT=8126

# ==========================================
# AWS Configuration (for production)
# ==========================================
AWS_REGION=us-east-1
AWS_S3_BUCKET=tax-filing-documents
AWS_SECRETS_MANAGER_ENABLED=false

# ==========================================
# E-filing Configuration
# ==========================================
IRS_EFILE_ENDPOINT=https://testwebservices.irs.gov/
IRS_EFILE_TCC=12345678
IRS_EFILE_EFIN=123456

# ==========================================
# Feature Flags
# ==========================================
ENABLE_PDF_GENERATION=true
ENABLE_EFILE_SUBMISSION=false
ENABLE_STATE_TAX=true

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
